@model RealEstate.Pages.Shared.ConnexionModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://kit.fontawesome.com/64d58efce2.js" crossorigin="anonymous"></script>
    <link href="~/connect.css" rel="stylesheet"  />
    <title>Sign in & Sign up Form</title>
</head>

<body>
    <div class="container">
        <div class="forms-container">
            <div class="signin-signup">
                <form asp-action="ConnexionPost" method="post" class="sign-in-form">
                    <h2 class="title">Se Connecter</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input asp-for="nomLogin" name="nomLogin" type="text" placeholder="Nom d'Utilisateur" />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input asp-for="passwordLogin" name="passwordLogin" type="password" placeholder="Mot de Passe" />
                    </div>
                    <input type="submit" value="Login" class="btn solid" />
                    <p class="social-text">ou Se Connecter avec Ceci :</p>
                    <div class="social-media">
                        <a href="#" class="social-icon">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-google"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </div>
                </form>
                <form asp-action="RegistrationPost" class="sign-up-form">
                    <h2 class="title">Inscription</h2>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="text" asp-for=nomLogin name="nomLogup" placeholder="Nom" required/>
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="text" asp-for=prenomLogup name="prenomLogup" placeholder="Prenom" required />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="text" asp-for=nomULogup name="nomULogup" placeholder="Nom d'Utilisateur" required />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-envelope"></i>
                        <input type="email" asp-for=emailLogup name="emailLogup" placeholder="Email" required />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" asp-for=passLogup name="passLogup" placeholder="Mot de Passe" required/>
                    </div>
                    <input type="submit" class="btn" value="Sign up" />
                    <p class="social-text">Ou Inscrivez Vous avec Ceci</p>
                    <div class="social-media">
                        <a href="#" class="social-icon">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-google"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>Nouveau Ici ?</h3>
                    <p>
                        Transformez vos rêves immobiliers en réalité. Inscrivez-vous dès maintenant pour une expérience de vente et de gestion locative simplifiée!
                    </p>
                    <button class="btn transparent" id="sign-up-btn">
                        S'inscrire
                    </button>
                </div>
                <img src="~/img/signin.svg" class="image" alt="" />
            </div>
            <div class="panel right-panel">
                <div class="content">
                    <h3>Déjà Membre ?</h3>
                    <p>
                        Bienvenue de nouveau! Connectez-vous pour explorer toutes les opportunités immobilières qui vous attendent. Votre prochaine aventure commence ici!
                    </p>
                    <button class="btn transparent" id="sign-in-btn">
                        Se Connecter
                    </button>
                </div>
                <img src="~/img/login.svg" class="image" alt="" />
            </div>
        </div>
    </div>

    <script src="~/connect.js"></script>
</body>

</html>